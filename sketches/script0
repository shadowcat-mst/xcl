use strict;
use warnings;
use XCL::Values;
use JSON::MaybeXS ();
use Text::xSV;

sub encode_json { Bytes(JSON::MaybeXS::encode_json($_[0])) }

sub say { STDOUT->say(@_) }

sub print { STDOUT->print(@_) }

sub xsv_object { Text::xSV->new }

use xcl::script;

say 'Hello world';

let : = fexpr (s, n) {
  let k = n.name_to_string();
  v => { $ (k, v) }
}

say [ encode_json %(:x 1, :y 2) ];

let xsv = xsv_object();

print xsv.format_row('The answer is', 42);
